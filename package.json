{
  "name": "feedbin-mailer",
  "version": "0.2.0",
  "scripts": {
    "app:local:build": "docker build -t karllhughes/feedbin-mailer:local .",
    "app:local:run": "sh docker/run.local.sh",
    "app:prod:run": "sh docker/run.hyper.sh",
    "app:prod:deploy": "docker run --rm --env-file $(pwd)/.env -v $(pwd)/docker:/docker chickenzord/hyper sh /docker/deploy.hyper.sh",
    "app:test": "sh docker/test.local.sh",
    "test": "jasmine-node spec"
  },
  "dependencies": {
    "aws-sdk": "^2.49.0",
    "email-templates": "^2.5.6",
    "feedbin-nodejs": "karllhughes/feedbin-nodejs",
    "handlebars": "^3.0.3",
    "moment": "^2.18.1",
    "sendgrid": "^5.0.1",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "Faker": "^0.7.2",
    "jasmine-node": "^1.14.5"
  }
}
